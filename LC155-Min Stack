class MinStack {
    
    Stack stack;
    int min = Integer.MAX_VALUE;
    public MinStack() {
      stack = new Stack();
    }
    
    public void push(int val) {
        if(min < val){
          stack.push(val);
        }
        else{
            stack.push(min);
            min = val;
            stack.push(val);
        }
    }


    public void pop() {
        if((int)stack.pop() == min){
            min = (int)stack.pop();
        }
    }
    
    public int top() {
        return (int)stack.peek();
    }
    
    public int getMin() {
        return min;
    }
}

/**
 * Your MinStack object will be instantiated and called as such:
 * MinStack obj = new MinStack();
 * obj.push(val);
 * obj.pop();
 * int param_3 = obj.top();
 * int param_4 = obj.getMin();
 */
